{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.cache/tsbuildinfo.json",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./src",
    "paths": {
        "@/*": [
            "./src/*"
        ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "docs",
    "migrations",
    "transient"
  ]
}
